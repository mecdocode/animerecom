{
  "name": "anime-recommendation-app",
  "version": "1.0.0",
  "description": "Production-grade manga/comic-themed anime recommendation web app",
  "main": "index.js",
  "packageManager": "pnpm@8.0.0",
  "scripts": {
    "start": "react-scripts start",
    "build": "CI=false GENERATE_SOURCEMAP=false react-scripts build",
    "build:analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "react-scripts start",
    "build:css": "postcss src/index.css -o src/tailwind-output.css",
    "watch:css": "postcss src/index.css -o src/tailwind-output.css --watch",
    "serve": "npx serve -s build -l 3000",
    "lighthouse": "npx lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html"
  },
  "dependencies": {
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tanstack/react-query": "^5.17.0",
    "axios": "^1.6.2",
    "framer-motion": "^10.16.16",
    "lucide-react": "^0.314.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intersection-observer": "^9.5.3",
    "react-router-dom": "^6.20.1",
    "react-virtuoso": "^4.6.2",
    "web-vitals": "^3.5.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "lighthouse": "^11.4.0",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "react-scripts": "5.0.1",
    "serve": "^14.2.1",
    "tailwindcss": "^3.4.0",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=7.0.0"
  }
}
